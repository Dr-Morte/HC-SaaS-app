<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.name_field :name, autocomplete: "off" %>
    <%= validates_format_of :name, :with => /^([\d\W]|[-])*$)/ %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.phone_field :phone, autocomplete: "off" %>
    <%= validates_format_of :phone, with /\A(\d{10}|\(?\d{3}\)?[-. ]\d{4})\z/ %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
